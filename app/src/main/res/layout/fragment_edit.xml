<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/custom_black"
        tools:context=".UI.Fragment.EditFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title"
                android:singleLine="true"
                android:id="@+id/editTitle"
                android:textColor="@color/white"
                android:textColorHint="#D2FFFFFF"
                android:layout_marginTop="10sp"
                android:padding="15sp"
                android:fontFamily="@font/regular"
                android:background="@drawable/edit_shape"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editsubtitle"
                android:hint="@string/subtitle"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#D2FFFFFF"
                android:layout_marginTop="10sp"
                android:padding="15sp"
                android:fontFamily="@font/regular"
                android:background="@drawable/edit_shape"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:id="@+id/pgreen"
                    android:background="@drawable/green_dot"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:id="@+id/pyellow"
                    android:layout_marginStart="20sp"
                    android:background="@drawable/yellow_dot"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="25sp"
                    android:id="@+id/pred"
                    android:layout_height="25sp"
                    android:layout_marginStart="20sp"
                    android:background="@drawable/red_dot" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/fav"
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="10sp"
                        android:src="@drawable/unchecked" />

                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:hint="@string/notes"
                android:id="@+id/editNotes"
                android:textColor="@color/white"
                android:gravity="start"
                android:textColorHint="#D2FFFFFF"
                android:layout_marginTop="10sp"
                android:padding="15sp"
                android:fontFamily="@font/regular"
                android:background="@drawable/edit_shape"/>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnSaveNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="26dp"
            android:backgroundTint="@color/custom_red"
            android:src="@drawable/baseline_done_24" />

    </FrameLayout>

</ScrollView>
